@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;

<h1>Specialties</h1>

<hr/>

@if (@Model.Count == 0)
{
  <h3>No Specialties have been added yet!</h3>
} 

<ul>
  @foreach(Specialty specialty in Model)
  {
    <li>@Html.ActionLink($"{specialty.Description}", "Details", new { id = specialty.SpecialtyId })</li>
  }
</ul>

<hr/>

<p>@Html.ActionLink("Add new Specialty", "Create")</p>